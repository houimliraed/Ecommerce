{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">City Details</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ city.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ city.name }}</td>
                        </tr>
                        <tr>
                            <th>Shipping Cost</th>
                            <td>${{ city.shippingCost|number_format(2, '.', ',') }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_city_index') }}" class="btn btn-secondary">Back to List</a>
                    <a href="{{ path('app_city_edit', {'id': city.id}) }}" class="btn btn-primary">Edit</a>
                </div>

                <div class="mt-3">
                    {{ include('city/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
