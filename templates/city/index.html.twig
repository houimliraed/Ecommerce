{% extends 'base.html.twig' %}

{% block title %}City {% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">City Index</h1>

        <!-- Table of cities -->
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Shipping Cost</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for city in cities %}
                            <tr>
                                <td>{{ city.id }}</td>
                                <td>{{ city.name }}</td>
                                <td>${{ city.shippingCost|number_format(2, '.', ',') }}</td>
                                <td>
                                    <a href="{{ path('app_city_show', {'id': city.id}) }}" class="btn btn-info btn-sm">Show</a>
                                    <a href="{{ path('app_city_edit', {'id': city.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center">No records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Create New City button -->
        <div class="mt-4 text-center">
            <a href="{{ path('app_city_new') }}" class="btn btn-primary">Create New City</a>
        </div>
    </div>
{% endblock %}
