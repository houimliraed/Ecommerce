{%include 'base.html.twig' %}


{%block body%}

<div class="container"><br><br>
<h1>Add Stock for {{product.name}}</h1><br><br>
{%include 'layouts/_flash_message.html.twig' %}
{{form_start(form)}}

<div class="form-group">
    {{ form_label(form.qte, 'Quantity', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.qte, { 'attr': { 'class': 'form form-control' } }) }}
</div><br> 
<input type="submit" class="btn btn-success d-block w-100">
{{form_end(form)}}

</div>

{%endblock%}