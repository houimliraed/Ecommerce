{% extends 'base.html.twig' %}

{% block title %}Produit {{ product.id }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Détails du produit (ID: {{ product.id }})</h1>

    <div class="row">
        <div class="col-md-6">
            {% if product.image %}
                <img src="{{ asset('uploads/images/' ~ product.image) }}" class="img-fluid rounded" alt="{{ product.name }}">
            {% else %}
                <img src="https://picsum.photos/600/400?random={{ product.id }}" class="img-fluid rounded" alt="Placeholder image">
            {% endif %}
        </div>
        <div class="col-md-6">
            <h3>Nom: {{ product.name }}</h3>
            <p><strong>Description:</strong> {{ product.description }}</p>
            <p><strong>Prix:</strong> {{ product.price | number_format(2, '.', ',') }} TND</p>
            

            <a href="{{path('app_cart_new',{'id': product.id})}}" class="btn btn-success mt-3">Ajouter au panier</a>
            <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}
